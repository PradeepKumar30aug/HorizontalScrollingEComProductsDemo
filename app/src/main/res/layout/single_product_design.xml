<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginEnd="@dimen/padding_10"        android:padding="2dp"        android:background="@drawable/gray_line_background"        android:gravity="">        <LinearLayout            android:layout_width="190dp"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:orientation="vertical">            <de.hdodenhof.circleimageview.CircleImageView                android:id="@+id/productimage"                android:layout_width="100dp"                android:layout_height="100dp"                android:layout_gravity="center"                android:layout_marginBottom="@dimen/padding_10"                android:layout_marginLeft="@dimen/padding_10"                android:layout_marginRight="@dimen/padding_10"                android:layout_marginTop="10dp"                android:src="@drawable/grains_bb" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="5dp"                android:layout_marginLeft="2dp"                android:layout_marginRight="2dp"                android:orientation="horizontal"                android:paddingLeft="@dimen/padding_10"                android:paddingRight="@dimen/padding_10">                <TextView                    android:id="@+id/salesprice"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_weight="0.1"                    android:text="₹ 220.00"                    android:layout_gravity="center"                    android:gravity="center"                    android:visibility="visible"                    android:textColor="#000"                    android:textSize="16dp"                    android:textStyle="bold" />                <TextView                    android:id="@+id/acutalprice"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="right"                    android:layout_weight="0.1"                    android:gravity="right"                    android:visibility="gone"                    android:text="₹ 320.00"                    android:textColor="@color/graycolor"                    android:textSize="16dp"                    android:textStyle="bold" />            </LinearLayout>            <TextView                android:id="@+id/productname"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:layout_weight="0.1"                android:paddingLeft="@dimen/padding_10"                android:text="Brown Rice"                android:layout_marginBottom="5dp"                android:textColor="@color/colorPrimaryDark"                android:textSize="15dp"                android:textStyle="bold"/>            <TextView                android:id="@+id/specility"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:layout_marginBottom="2dp"                android:paddingLeft="@dimen/padding_10"                android:text="Unpolished"                android:textColor="@color/colorPrimaryDark"                android:textSize="12dp" />            <TextView                android:id="@+id/productid"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="left"                android:layout_marginBottom="5dp"                android:layout_weight="0.1"                android:visibility="gone"                android:paddingLeft="@dimen/padding_10"                android:text="Brown Rice"                android:textColor="@color/colorPrimaryDark"                android:textSize="13dp"                android:textStyle="bold" />            <TextView                android:id="@+id/farmerName"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="left"                android:layout_marginBottom="2dp"                android:paddingLeft="@dimen/padding_10"                android:text="Farmer: Shanti Devi"                android:textColor="@color/colorPrimaryDark"                android:textSize="12dp" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="2dp"                android:layout_marginLeft="2dp"                android:layout_marginRight="2dp"                android:orientation="horizontal"                android:paddingLeft="@dimen/padding_10"                android:paddingRight="@dimen/padding_10">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Qty: "                    android:textSize="12dp"                    android:textStyle="bold" />                <TextView                    android:id="@+id/qty"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="right"                    android:layout_weight="0.1"                    android:layout_marginStart="5dp"                    android:gravity="left"                    android:text=" 1 KG"                    android:textColor="@color/graycolor"                    android:textSize="12dp" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginBottom="@dimen/padding_10"                android:layout_marginLeft="2dp"                android:layout_marginRight="2dp"                android:orientation="horizontal"                android:paddingLeft="@dimen/padding_10"                android:paddingRight="@dimen/padding_10">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Available Stock: "                    android:textSize="12dp"                    android:textStyle="bold" />                <TextView                    android:id="@+id/stcokValue"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="right"                    android:gravity="left"                    android:text="4"                    android:layout_marginStart="2dp"                    android:layout_marginEnd="2dp"                    android:textColor="@color/graycolor"                    android:textSize="12dp" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_gravity="right"                    android:layout_weight="0.1"                    android:gravity="left"                    android:layout_marginStart="2dp"                    android:text="Units"                    android:textColor="@color/graycolor"                    android:textSize="12dp" />            </LinearLayout>            <LinearLayout                android:id="@+id/counterlayout"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:layout_marginBottom="@dimen/padding_10"                android:visibility="visible"                android:layout_marginLeft="@dimen/padding_10"                android:layout_marginRight="@dimen/padding_10"                android:orientation="horizontal">                <!-- add code for button -->                <Button                    android:id="@+id/minusbtn"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_gravity="center"                    android:background="@drawable/minus_button"                    android:gravity="center"                    android:text="-"                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"                    android:textColor="@color/white" />                <TextView                    android:id="@+id/counter"                    android:layout_width="match_parent"                    android:layout_height="30dp"                    android:layout_gravity="right"                    android:layout_weight="0.1"                    android:gravity="center"                    android:text="1"                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"                    android:textColor="@color/colorPrimaryDark" />                <Button                    android:id="@+id/plusbutton"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_gravity="center"                    android:background="@drawable/plus_button"                    android:gravity="center"                    android:text="+"                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"                    android:textColor="@color/white" />            </LinearLayout>            <LinearLayout                android:id="@+id/add_button"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:layout_marginBottom="@dimen/padding_10"                android:layout_marginLeft="@dimen/padding_10"                android:layout_marginRight="@dimen/padding_10"                android:background="@drawable/minus_button"                android:orientation="horizontal"                android:visibility="gone">                <!-- add code for button -->                <TextView                    android:layout_width="match_parent"                    android:layout_height="30dp"                    android:layout_gravity="center"                    android:layout_weight="0.1"                    android:background="@drawable/minus_button"                    android:gravity="center"                    android:text="ADD"                    android:textSize="14dp"                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"                    android:textColor="@color/white" />                <TextView                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:layout_gravity="center"                    android:layout_marginLeft="2dp"                    android:background="@drawable/plus_button"                    android:gravity="center"                    android:text="+"                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"                    android:textColor="@color/white" />            </LinearLayout>        </LinearLayout>    </LinearLayout></LinearLayout>